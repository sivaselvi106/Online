
@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>
@Html.ActionLink("Create new mobile", "Create")
<br />
@if (TempData["Message"] != null)
{
    @Html.Label((string)TempData["Message"])
}
<table border="1">
    <tr>
        <th>BrandName</th>
        <th>Id</th>
        <th>MobileModel</th>
        <th>Color</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    @foreach (MobileShopping.Entity.Mobile mobile in Model)
    {
        <tr>
            <td>@mobile.BrandName</td>
            <td>@mobile.Id</td>
            <td>@mobile.MobileModel</td>
            <td>@mobile.Color</td>
            <td>@mobile.Price</td>
            <td>
                @Html.ActionLink("Edit /", "Edit", new { id = mobile.Id })
                @Html.ActionLink("Delete", "Delete", new { id = mobile.Id })
            </td>
        </tr>
    }
</table>

